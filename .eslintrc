{
  "extends": "eslint:recommended",
  "rules": {
    "arrow-parens": "error",
    "brace-style": "warn",
    "comma-dangle": ["warn", "always-multiline"],
    "comma-spacing": "warn",
    "curly": "error",
    "eol-last": "warn",
    "eqeqeq": ["error", "smart"],
    "indent": [
      "error",
      2,
      {
        "FunctionDeclaration": {
          "parameters": "first"
        },
        "FunctionExpression": {
          "parameters": "first"
        },
        "CallExpression": {
          "arguments": "first"
        }
      }
    ],
    "keyword-spacing": "warn",
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "no-eval": ["error"],
    "no-implied-eval": "error",
    "no-self-compare": "error",
    "no-sequences": "warn",
    "no-trailing-spaces": "error",
    "no-unused-vars": [
      "error",
      { "args": "none" }
    ],
    "no-use-before-define": [
      "error",
      { "functions": false }
    ],
    "prefer-promise-reject-errors": "error",
    "prefer-template": "error",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "require-await": "warn",
    "semi": ["error", "always"],
    "space-before-blocks": "warn",
    "space-infix-ops": "error",
    "template-curly-spacing": ["warn", "never"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  }
}
